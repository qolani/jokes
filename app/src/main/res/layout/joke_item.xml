<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_margin="8dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:src="@drawable/ic_launcher_background"
                android:id="@+id/image"/>

            <TextView
                android:id="@+id/joke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:maxLines="4"
                android:ellipsize="end"
                android:textColor="@color/brown"
                android:text="bhjbbbbhbdjhcvhjdvhcvhdvhvcvjhvjvjvjvhhvjvvhvhvghvgvhhvjhjvhvjvhjvhjhvhhff76t67t67t7t6676t667tt77ttttt66767t67t6t7t676ttt67t67tt66ttt778ttttttdhchv"/>

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_below="@+id/image"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Image Url"/>

            <TextView
                android:id="@+id/url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_below="@+id/image"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13sp"
                android:text="bhjbbbbhbdjhcvhjdvhcvhdvhvcdhchv"/>

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_below="@+id/url"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Date"/>

            <TextView
                android:id="@+id/updated_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_below="@+id/url"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13sp"
                android:text="Date"/>

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:layout_below="@id/updated_date"
                android:textColor="@color/black"
                android:text="Date"/>

            <TextView
                android:id="@+id/created_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_below="@+id/updated_date"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13sp"
                android:text="Date"/>

            <TextView
                android:id="@+id/txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginBottom="8dp"
                android:layout_below="@id/created_date"
                android:textColor="@color/black"
                android:text="Categories"/>

            <RelativeLayout
                android:layout_below="@+id/txt4"
                android:layout_width="match_parent"
                android:background="@color/colorAccent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/childRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/category_item"/>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>