<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="joke"
            type="com.example.jokes.entities.Joke" />

        <variable
            name="image"
            type="String" />
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.JokeDetailFragment">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="8dp"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        app:image="@{image}"
        android:id="@+id/image"/>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:textSize="17dp"
        android:layout_marginStart="8dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/image"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Joke"/>

    <TextView
        android:id="@+id/joke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt1"
        android:layout_marginTop="8dp"
        android:textSize="17dp"
        android:maxLines="4"
        android:ellipsize="end"
        android:textAlignment="center"
        android:textColor="@color/brown"
        android:text="@{joke.value}"/>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/joke"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:textStyle="bold"
        android:text="Image URL"/>

    <TextView
        android:id="@+id/url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="17dp"
        android:textAlignment="center"
        android:layout_below="@+id/txt2"
        android:textColor="@color/colorPrimaryDark"
        android:text="@{joke.url}"/>


    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:textSize="17dp"
        android:layout_marginStart="8dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/url"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Created Date"/>

    <TextView
        android:id="@+id/created_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textAlignment="center"
        android:layout_below="@+id/txt3"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17dp"
        android:text="@{joke.created_at.substring(0,16)}"/>

    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/created_date"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="17dp"
        android:text="Updated Date"/>

    <TextView
        android:id="@+id/updated_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textAlignment="center"
        android:layout_below="@+id/txt4"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17dp"
        android:text="@{joke.updated_at.substring(0,16)}"/>

    <TextView
        android:id="@+id/txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:textSize="21sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/updated_date"
        android:textColor="@color/black"
        android:text="Categories"/>

    <RelativeLayout
        android:layout_below="@+id/txt5"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/detailRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:listitem="@layout/detail_item"/>
    </RelativeLayout>

</RelativeLayout>
</layout>